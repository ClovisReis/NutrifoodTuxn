<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="40dp"
    android:background="@color/branco"
    android:orientation="vertical"
    tools:context=".TelaTermos">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        tools:ignore="WebViewLayout">
        <WebView
            android:id="@+id/wv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </ScrollView>

    <CheckBox
        android:id="@+id/aceito1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:buttonTint="@color/colorPrimary"
        android:checked="false"
        android:text="LÃ­ e aceito os termos de uso"
        android:textColor="@color/texto" />

    <CheckBox
        android:id="@+id/aceito2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:buttonTint="@color/colorPrimary"
        android:checked="false"
        android:text="Desejo receber avisos sobre ofertas e conteudos relacionados ao app pelo e-mail"
        android:textColor="@color/texto" />

    <Button
        android:id="@+id/aceito"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40sp"
        android:layout_marginBottom="30sp"
        android:background="@drawable/corners"
        android:onClick="OK"
        android:text="OK"
        android:textColor="@color/white" />

</LinearLayout>

