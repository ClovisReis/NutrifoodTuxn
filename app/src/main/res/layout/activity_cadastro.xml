<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradiente"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15sp"
        android:layout_gravity="center_vertical">

        <!-- Nome Label -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Cadastro"
            android:layout_marginTop="15sp"
            android:textColor="@color/white"
            android:textSize="40sp">

        </TextView>


        <EditText android:id="@+id/input_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:drawableLeft="@drawable/usuario"
            android:layout_marginRight="10sp"
            android:layout_marginTop="50sp"
            android:hint="  Nome"
            android:inputType="textPersonName" />

        <!-- Email Label -->


        <EditText android:id="@+id/input_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="30sp"
            android:drawableLeft="@drawable/usuario"
            android:layout_marginRight="10sp"
            android:hint="  Nome"/>


        <!-- Password Label -->

        <EditText android:id="@+id/input_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:layout_marginTop="30sp"
            android:layout_marginLeft="10sp"
            android:drawableLeft="@drawable/cadeado"
            android:layout_marginRight="10sp"
            android:hint="  Senha"
            />


        <!-- Signup Button -->
        <Button
            android:onClick="CriarCadastro"
            android:layout_width="185sp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/white"
            android:background="@drawable/selector_button"
            android:id="@+id/button_cadastrar"
            android:text="Criar"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/fazer_login"
            android:id="@+id/textView2"
            android:textColor="@color/white"
            android:layout_below="@+id/button_cadastrar"
            android:layout_centerHorizontal="true"
            android:onClick="abrirLoginUsuario" />

    </LinearLayout>
</ScrollView>