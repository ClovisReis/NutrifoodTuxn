<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradiente"
    android:fitsSystemWindows="true">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="15sp"
        android:layout_gravity="center_vertical"
        >

        <!-- Email Label -->

        <ImageView
            android:layout_width="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_height="100sp"
            android:src="@drawable/anonimo"
            android:layout_gravity="center_horizontal">

        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Login"
            android:layout_marginTop="15sp"
            android:textColor="@color/white"
            android:textSize="40sp">

        </TextView>


        <EditText
            android:id="@+id/input_emaillogin"
            android:layout_width="match_parent"
            android:layout_marginLeft="10sp"
            android:drawableLeft="@drawable/usuario"
            android:layout_marginTop="50sp"

            android:layout_marginRight="10sp"
            android:layout_height="40sp"
            android:hint="  E-mail"
            android:inputType="textEmailAddress" />

        <!-- Password Label -->


        <EditText
            android:id="@+id/input_passwordlogin"
            android:layout_width="match_parent"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:drawableLeft="@drawable/cadeado"
            android:layout_marginTop="30sp"
            android:layout_height="40sp"
            android:hint="  Senha"
            android:inputType="textPassword" />

        <Button
            android:layout_width="185sp"
            android:id="@+id/b1"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp"
            android:background="@drawable/selector_button"
            android:onClick="btn_login"
            android:text="Entrar" />

        <Button
            android:layout_width="190sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="6dp"
            android:textColor="@color/white"
            android:layout_marginBottom="24dp"
            android:background="@drawable/btn_google_signin_light_normal_web"
            android:onClick="btn_login_google" />

        <View
            android:layout_width="260sp"
            android:layout_gravity="center_horizontal"
            android:layout_height="1dp"
            android:background="@color/white"
            android:focusable="false" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="10sp"
            android:gravity="center"
            android:textColor="@color/white"
            android:onClick="abrirCadastroUsuario"
            android:text="Não tem conta ainda? Crie já"
            android:textSize="16dip" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:onClick="forgetpassword"
            android:text="Esqueci a senha"
            android:textSize="16dip" />
    </LinearLayout>
</ScrollView>