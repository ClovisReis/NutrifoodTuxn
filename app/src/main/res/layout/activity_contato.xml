<ScrollView xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <include android:id="@+id/app_bar"
        layout="@layout/toolbar"
        xmlns:android="http://schemas.android.com/apk/res/android" />


    <TextView
        android:layout_margin="10sp"
        android:layout_height="wrap_content"
        android:text="Entre em contato conosco, deixe aqui a sua mensagem."
        android:id="@+id/textView3"
        android:textSize="15dp"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:textColor="@color/black"
        >
    </TextView>

    <TextView
        android:layout_marginLeft="5sp"
        android:layout_marginRight="5sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="Por favor preencha todos os campos!"
        android:id="@+id/textView5"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:textColor="@color/black"/>


    <EditText
        android:layout_margin="10sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/input_subject"
        android:background="#E6E8FA"
        android:hint="Assunto"
        android:textColorHint="@color/cinza"
        android:layout_marginTop="10dp"
        android:lines="1"
        android:layout_weight="1"
        android:textColor="@color/black"
        android:inputType="textEmailAddress" />


    <EditText
        android:layout_margin="10sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="15"
        android:id="@+id/input_menssage"
        android:background="#E6E8FA"
        android:hint="Mensagem"
        android:textColorHint="@color/cinza"
        android:gravity="top"
        android:lines="5"
        android:layout_marginTop="5dp"
        android:layout_weight="5"
        android:textColor="@color/black"
        />

    <Button
        android:layout_margin="10sp"
        android:layout_width="wrap_content"
        android:id="@+id/b1"
        android:background="@drawable/corners"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:textColor="@color/white"
        android:layout_gravity="right"
        android:onClick="btn_send"
        android:text="Enviar" />

</LinearLayout>

</ScrollView>